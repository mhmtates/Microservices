
@{
    ViewData["Title"] = "SignIn";
}

@model FreeCourse.WebUI.Models.User.UserInput
    <div class = "row">
        <div class = "col-md-4 offset-md-4"></div>
         <div class = "card">
             <div class="card-body">
                 <h5 class="card-title">Üye Girişi</h5>
                 <div class="text-danger" asp-validation-summary = "ModelOnly"></div>
                 <form asp-controller="Auth" asp-action="SignIn" method="post">
                     <div class="mb-3">
                         <label asp-for="Email" class="form-label">Eposta Adresiniz</label>
                         <input type="email" value="ozatesatess@outlook.com" asp-for= "Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                         <span class = "text-danger" asp-validation-for="Email"></span>
                     </div>
                     <div class="mb-3">
                         <label asp-for="Password" class="form-label">Şifreniz</label>
                         <input type="password" value="Password12*" asp-for="Password" class="form-control" id="exampleInputPassword1">
                         <span class="text-danger" asp-validation-for="Password"></span>
                     </div>
                     <div class="mb-3 form-check">
                         <input type="checkbox" asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
                         <label asp-for="IsRemember" class="form-check-label" for="exampleCheck1"></label>
                     </div>
                     <button type="submit" class="btn btn-primary">Giriş yap</button>
                 </form>
             </div>

        </div>
    </div>
   
